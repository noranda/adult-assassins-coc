<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Log In</h2>
      {{#if registrationSuccessful}}
        <div class="alert alert-success" role="alert">
          Your account has been created, you may now log in with your email and password.
        </div>
      {{/if}}
      {{#if loginFailed}}
        <div class="alert alert-danger" role="alert">
          Log in failed: invalid credentials. Please try again.
        </div>
      {{/if}}
      <form {{action 'authenticate' on='submit'}}>
        <div class="form-group">
          {{input type="text" value=identification id="identification" placeholder="Email Address" class="form-control"}}
        </div>
        <div class="form-group">
          {{input type="password" value=password id="password" placeholder="Password" class="form-control"}}
        </div>
        <input type="submit" class="btn btn-primary pull-right" value="Login" />
      </form>
    </div>
  </div>
</div>
