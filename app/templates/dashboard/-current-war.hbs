  <div class="score">
    <span class="aa-score">95</span>
    <i class="fa fa-minus fa-2x"></i>
    <span class="op-score">98</span>
  </div>

  <div class="container current-war">
    {{#each target in targetList}}
      {{war-player-row warPlayer=target}}
    {{/each}}

