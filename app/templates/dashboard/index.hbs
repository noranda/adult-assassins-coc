<div class="container-fluid">
  {{dashboard-header}}

  <div class="row">
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><i class="fa fa-gavel fa-fw"></i> Current War</h3>
        </div>
        <div class="panel-body current-war">
          {{#if isInWar}}
            {{partial 'dashboard/current-war'}}
          {{else}}
            <h4 class="clash">{{warText}}</h4>
            {{#if currentTimer}}
              {{countdown-timer to=currentTimer.endDate}}
            {{else}}
              <button class="btn btn-primary btn-lg" {{action "scheduleWar"}}>Schedule War</button>
            {{/if}}
            <button class="btn btn-danger btn-lg" {{action "declareWar"}}>Declare War</button>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
