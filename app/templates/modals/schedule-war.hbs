{{#bootstrap-modal
  formClass="form-horizontal"
  close="close"
  submitBtnTitle="Schedule War"
  okBtnTitle="Cancel"
  title="Schedule War"
  fade=true
  disableSubmitBtn=isSaving
  submitBtnClass="btn-primary"
  submit="submit"}}

  {{#if errors.length}}
    <div class="alert alert-danger">
      <p><strong>Errors:</strong></p>
      <ul>
        {{#each error in errors}}
          <li>{{error}}</li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="form-group">
    <label class="col-sm-4 control-label">
      Time until preparation:
    </label>
    <div class="col-sm-3">
      <div class="input-group">
        {{input value=prepareHours type="text" classNames="form-control" maxlength=2 placeholder="0"}}
        <span class="input-group-addon" id="basic-addon2">hrs</span>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="input-group">
        {{input value=prepareMinutes type="text" classNames="form-control" maxlength=2 placeholder="0"}}
        <span class="input-group-addon" id="basic-addon2">min</span>
      </div>
    </div>
  </div>
{{/bootstrap-modal}}
